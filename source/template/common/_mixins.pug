mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="assets/img/sprite.svg#" + name)

mixin graph(names)
	each item in names
		.technology__item
			svg(width="120", height="120", class="technology__graph")
				circle(r="45", cx="60", cy="60", stroke="#ccc", fill="none")
				circle(r="45", cx="60", cy="60", stroke="#86a77a", transform='rotate(-90 60,60)', stroke-dasharray="152.5", class="technology__graph_fill")
			span.technology__name= item